# SAWEROOT = $$system(echo $$_PRO_FILE_PWD_ | perl -pe \'s|(.*?sonicawe)/.*|\\1|\')
isEmpty(SAWEROOT): SAWEROOT = ..

QT += opengl
QT += network
QT += widgets

INCLUDEPATH += \
    $$SAWEROOT/lib/gpumisc \
    $$SAWEROOT/lib/backtrace \
    $$SAWEROOT/lib/justmisc \
    $$SAWEROOT/lib/signal \
    $$SAWEROOT/lib/tfr \
    $$SAWEROOT/lib/filters \
    $$SAWEROOT/lib/heightmap \
    $$SAWEROOT/lib/tfrheightmap \
    $$SAWEROOT/lib/heightmapview \
    $$SAWEROOT/src \

unix:!macx {
INCLUDEPATH += \
    $$SAWEROOT/lib/sonicawe-ubuntulib/include \

LIBS += \
    -lsndfile \
    -lGLEW \
    -lGLU \
    -lGL \
    -lboost_chrono \
    -lboost_serialization \
    -lboost_system \
    -lboost_thread \
    -lglut \
    -L$$SAWEROOT/lib/sonicawe-ubuntulib/lib \
    -lportaudiocpp -lportaudio \
    -lhdf5 -lhdf5_hl \
    -L../lib/justmisc -ljustmisc \
    -L../lib/backtrace -lbacktrace \
    -L../lib/gpumisc -lgpumisc \
    -L../lib/signal -lsignal \
    -L../lib/tfr -ltfr \
    -L../lib/filters -lfilters \
    -L../lib/heightmap -lheightmap \
    -L../lib/tfrheightmap -ltfrheightmap \
    -L../lib/heightmapview -lheightmapview \

QMAKE_LFLAGS += -Wl,-rpath=\'\$\${ORIGIN}\'
}

macx {
LIBS += -lsndfile \
    -framework GLUT \
    -framework OpenGL \
    -lportaudiocpp -lportaudio \
    -lhdf5 -lhdf5_hl \
    -lboost_chrono-mt \
    -lboost_serialization-mt \
    -lboost_system-mt \
    -lboost_thread-mt \
    -L../lib/justmisc -ljustmisc \
    -L../lib/backtrace -lbacktrace \
    -L../lib/gpumisc -lgpumisc \
    -L../lib/signal -lsignal \
    -L../lib/tfr -ltfr \
    -L../lib/filters -lfilters \
    -L../lib/heightmap -lheightmap \
    -L../lib/tfrheightmap -ltfrheightmap \
    -L../lib/heightmapview -lheightmapview \

# macports
exists(/opt/local/include/): INCLUDEPATH += /opt/local/include/
exists(/opt/local/lib): LIBS += -L/opt/local/lib

# homebrew
exists(/usr/local/include/): INCLUDEPATH += /usr/local/include/
exists(/usr/local/lib): LIBS += -L/usr/local/lib
}

win32 {
INCLUDEPATH += \
        $$SAWEROOT/3rdparty/windows/glut \
        $$SAWEROOT/3rdparty/windows/glew/include \
        $$SAWEROOT/3rdparty/windows/portaudio/include \
        $$SAWEROOT/3rdparty/windows/libsndfile/include \
        $$SAWEROOT/3rdparty/windows/hdf5lib/include \
        $$SAWEROOT/3rdparty/windows/zlib/include \
        $$SAWEROOT/3rdparty/windows/omp \
        $$SAWEROOT/3rdparty/windows
LIBS += \
        -l$$SAWEROOT/3rdparty/windows/glut/glut32 \
        -l$$SAWEROOT/3rdparty/windows/glew/lib/glew32 \
        -l$$SAWEROOT/3rdparty/windows/libsndfile/libsndfile-1 \
        -l$$SAWEROOT/3rdparty/windows/hdf5lib/dll/hdf5dll \
        -l$$SAWEROOT/3rdparty/windows/hdf5lib/dll/hdf5_hldll \
        -L$$SAWEROOT/3rdparty/windows/boostlib \
        -L$$SAWEROOT/3rdparty/windows/omp \
        $$SAWEROOT/3rdparty/windows/portaudio/portaudio.lib \

		
CONFIG(debug, debug|release): LIBS += \
        $$SAWEROOT/3rdparty/windows/portaudio/portaudiocpp_mt_gd.lib
else: LIBS += \
        $$SAWEROOT/3rdparty/windows/portaudio/portaudiocpp_mt.lib

